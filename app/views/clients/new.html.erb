<div class="d-flex justify-content-center">
    <div class="card card-dark m-2" style="width: 1250px;">
        <div class="card-header">
            <h3>Cadastro:</h2>
        </div>
        <%= form_with model: @client do |form| %>
            <div class="card-body">
                <div class="row mt-3">
                    <div class="col">
                        <%= form.text_field :name, placeholder: "Nome Completo" , class: "form-control" %>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <%= form.text_field :cpf, placeholder: "CPF" , class: "form-control" %>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <%= form.text_field :adress, placeholder: "EndereÃ§o" , class: "form-control" %>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col">
                        <%= form.text_field :cep, placeholder: "CEP" , class: "form-control" %>
                    </div>
                    <div class="col">

                        <%= form.number_field :house_n, placeholder: "NÂº" , class: "form-control" %>
                    </div>
                    <div class="col">
                        <%= form.text_field :add_inf, placeholder: "Complemento" , class: "form-control" %>
                    </div>
                </div>
            </div>
            <div class="card-footer rounded-bottom" style="background-color:#BEBEBE">
                <div class="col d-flex justify-content-end">
                    <div class="m-1">
                        <%= link_to "Voltar", clients_path, class:"btn btn-primary" %>
                        <%= form.submit "Cadastrar" , class:"btn btn-success" %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>