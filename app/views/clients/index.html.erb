<div class="d-flex justify-content-center">
    <div class="card m-2 card-dark" style="width: 1250px;">
        <div class="card-header">
            <div class="row">
                <div class="col align-self-center"><h4>Lista de Clientes: </h4></div>
                <div class="col">
                    <span class="d-flex justify-content-end">
                        <div class="m-1">
                            <%= link_to "Novo Cadastro", new_client_path, class:"btn btn-success" %>
                            <%= link_to "Voltar", root_path, class:"btn btn-primary" %>
                        </div>
                    </span>
                </div>
            </div>
        </div>
        <div class="card-body">
            <% @clients.each do |client|%>
                <div class="card mb-3">
                    <div class="row g-0">
                        <div class="card-body">
                            <div class="row">
                                <div class="col">
                                    <span>Nome: </span><%= client.name %>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-12">
                                    <span>CPF: </span><%= client.cpf %>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-12">
                                    <span>CEP: </span><%= client.cep %>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="col-6">
                                    <span>Endereço: </span><%= client.adress %>
                                </div>
                                <div class="col-2 ">
                                    <span>Nº: </span><%= client.house_n %>
                                </div>
                                <div class="col-4">
                                    <span>Complemento: </span><%= client.add_inf %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer rounded-bottom" style="background-color:#BEBEBE">
                        <div class="col d-flex justify-content-end">
                            <div class="m-1"><%= link_to "Mais Ações", client_path(client.id), class:"btn btn-success" %></div>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
