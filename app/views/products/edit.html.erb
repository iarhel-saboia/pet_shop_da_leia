<div class="d-flex justify-content-center">
    <div class="card card-dark m-2" style="width: 1250px;">
        <div class="card-header text-bg-dark">
            <h3>Edite os Dados do Produto</h2>
        </div>
        <%= form_with model: @product do |form| %>
            <div class="card-body">
                <div class="row mt-3">
                    <div class="col">
                        <%= form.text_field :name, placeholder: "Nome" , class: "form-control" %>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <%= form.number_field :quantity, placeholder: "Quantidade" , class: "form-control" %>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <%= form.number_field :sale_price, placeholder: "PreÃ§o" , class: "form-control" %>
                    </div>
                </div>
            </div>
            <div class="card-footer  rounded-bottom" style="background-color:#BEBEBE">
                <div class="col d-flex justify-content-end">
                    <div class="m-1"><%= link_to "Voltar", products_path, class:"btn btn-primary" %></div>
                    <div class="m-1"><%= form.submit "Editar", class:"btn btn-success" %></div>
                </div>
            </div>
        <% end %>
    </div>
</div>