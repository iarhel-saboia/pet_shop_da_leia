<div class="card card-dark m-2 text-bg-dark">
    <div class="card-header">
        <h3>Cadastro:</h2>
    </div>
    <%= form_with model: @product do |form| %>
        <div class="card-body">
            <div class="row mt-3">
                <div class="col">
                    <%= form.text_field :name, placeholder: "Nome" , class: "form-control" %>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12">
                    <%= form.number_field :quantity, placeholder: "Quantidade" , class: "form-control" %>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12">
                    <%= form.number_field :sale_price, placeholder: "PreÃ§o" , class: "form-control" %>
                </div>
            </div>
        </div>
        <div class="card-footer rounded-bottom" style="background-color:#BEBEBE">
            <div class="col d-flex justify-content-end">
                <div class="m-1">
                    <%= link_to "Voltar", products_path, class:"btn btn-primary" %>
                    <%= form.submit "Cadastrar", class:"btn btn-success" %>
                </div>
            </div>
        </div>
    <% end %>
</div>